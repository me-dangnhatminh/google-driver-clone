datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          String   @id @map("id")
  account_id  String?  @unique @map("account_id")
  account_isp String?  @map("account_isp")
  email       String   @unique @map("email")
  status      String   @map("status")
  created_at  DateTime @map("created_at")
  updated_at  DateTime @map("updated_at")

  metadata Json @map("metadata")

  @@map("customers")
}
