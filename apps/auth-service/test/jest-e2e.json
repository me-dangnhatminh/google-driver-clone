{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/auth-client/(.*)": "<rootDir>/../libs/auth-client/src/$1",
    "@app/auth-client": "<rootDir>/../libs/auth-client/src",
    "@app/common/(.*)": "<rootDir>/../libs/common/src/$1",
    "@app/common": "<rootDir>/../libs/common/src",
    "@app/payment-client/(.*)": "<rootDir>/../libs/payment-client/src/$1",
    "@app/payment-client": "<rootDir>/../libs/payment-client/src"
  }
}